<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.sun_post.mypasswordmanager.AddPasswordActivity"
    tools:ignore="MergeRootFrame" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sun_post.mypasswordmanager.AddPasswordActivity$PlaceholderFragment">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPasswordUsername"
            android:inputType="text"
            android:hint="@string/username_hint"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/addPasswordNote"
            android:layout_alignStart="@+id/addPasswordNote"
            android:layout_alignRight="@+id/addPasswordNote"
            android:layout_alignEnd="@+id/addPasswordNote" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/addPasswordPassword"
            android:gravity="center"
            android:hint="@string/prompt_password"
            android:layout_below="@+id/addPasswordNote"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_password_button_text"
            android:id="@+id/addPasswordSubmitButton"
            android:layout_below="@+id/addPasswordPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addPasswordNote"
            android:hint="note"
            android:gravity="center"
            android:layout_below="@+id/addPasswordUsername"
            android:layout_alignLeft="@+id/addPasswordPassword"
            android:layout_alignStart="@+id/addPasswordPassword"
            android:layout_alignRight="@+id/addPasswordPassword"
            android:layout_alignEnd="@+id/addPasswordPassword" />

    </RelativeLayout>
</FrameLayout>